<div class="cell">
    <h2> Добавление сообщения </h2>
    <a class="button" href="/discussions/<%= @id %>"> Вернуться </a>

    <% form({ method: :post }, { obj: @message_form }) do |f| %>
      <div class="grid-x grid-margin-x">
        <div class="cell">
          <%= f.input(:user_name, type: :text, label: 'Имя пользователя', placeholder: 'розария3452')%>
          <%= f.input(:text, type: :text, label: 'Текст сообщения', placeholder: 'Всем привет!')%>
        </div>
        <div class="cell">
          <%= f.button(value: 'Отправить', class: 'button') %>
        </div>
      </div>
    <% end %>
</div>